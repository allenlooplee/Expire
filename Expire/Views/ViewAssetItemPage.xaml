<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="Expire.Views.ViewAssetItemPage"
    Title="{Binding Name}">
	<ContentPage.ToolbarItems>
        <ToolbarItem Text="编辑" Clicked="EditButton_Clicked"/>
    </ContentPage.ToolbarItems>
    <StackLayout Margin="16">
        <Label Text="{Binding Price, StringFormat='价格: {0}'}"/>
        <Label Text="{Binding AverageValue, StringFormat='日均价格: {0:f2}'}"/>
        <Label Text="{Binding StartDate, StringFormat='开始日期: {0:d}'}"/>
        <Label Text="{Binding EndDate, StringFormat='结束日期: {0:d}'}"/>
        <Label Text="{Binding ElapsedRate, StringFormat='耗损比例: {0:p2}'}"/>
        <Label Text="{Binding Remark}"/>
    </StackLayout>
</ContentPage>
